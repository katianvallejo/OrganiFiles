<p id="notice"><%= notice %></p>
<div class="container">
  <div class="jumbotron text-center katian">
    <h1>Listing Employees</h1>
  </div>
<div class="media">
  <div class="media-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Tipo identificación</th>
          <th># identificación</th>
          <th>Primer nombre</th>         
          <th>Primer apellido</th>
          <th>Fecha ingreso</th>
          <th>Fecha retiro</th>
          <th>Estado</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.tipo_id %></td>
            <td><%= employee.no_id %></td>
            <td><%= employee.primer_nombre %></td>
            <td><%= employee.primer_apellido %></td>
            <td><%= employee.fecha_ingreso %></td>
            <td><%= employee.fecha_retiro %></td>
            <td><%= employee.estado %></td>
            <div class="btn-group">
              <td><%= link_to 'Show', employee, class: "btn  btn-show" %></td>
              <td><%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-edit" %></td>
              <td><%= link_to 'Destroy', employee, method: :delete, class: "btn btn-destroy", data: { confirm: 'Are you sure?' } %></td>
            </div>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<div class="container">
  <div class="row"></div>
    <div class="col-md-6 col-md-offset-3">
    <%= link_to 'New Employee', new_employee_path, class: "btn btn-success btn-lg" %>
    <h2>Import Employees</h2>

      <%= form_tag import_employees_path, multipart: true do %> 
      <%= file_field_tag :file %>  
      <%= submit_tag "Import", class: "btn btn-default" %>
      <% end %>
  </div>
</div>

